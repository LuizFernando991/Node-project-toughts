        {{#if messages.messages}}
            <div class="message">{{messages.messages}}</div>
        {{/if}}
        {{{ body }}}
    </div>
    <footer>
        <p><span>Toughts</span> &copy; 2021</p>
    </footer>
    
</body>
</html>