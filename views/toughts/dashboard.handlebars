<div class="dashboard">
    <div class="title-container">
        <h2>Dashboard</h2>
        <a href="/addtought" class="btn">Criar pensamento</a>
    </div>
    <h3>Seus pensamentos</h3>

    <ul>
        {{#each toughts}}
            <li>
                <span class="label">"{{this.title}}"</span>
                <span class="actions">
                    <a href="/edittought/{{this.id}}" class="btn">Editar</a>
                    <form action="/deleteTought" method="POST">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <input type="submit" value="Excluir" class="btn">
                    </form>
                </span>
            </li>
        {{/each}}
    </ul>
    {{#if empty}}
        <p>Ainda não há nenhum pensamento seu...</p>
    {{/if}}
</div>